<%- include ('../partials/head')-%>
<%- include ('../partials/navbar')-%>

<div class="container categorias pt-5">
    <div class="row row-cols-2 justify-content-evenly">
      <div class="col-3">
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                  Categorias
                </button>
              </h2>
              <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <div class="list-group list-group-flush">
                        <a href="/categorias?category=remeras" class="list-group-item list-group-item-action">Remeras</a>
                        <a href="/categorias?category=buzos" class="list-group-item list-group-item-action">Buzos</a>
                        <a href="/categorias?category=camperas" class="list-group-item list-group-item-action">Camperas</a>
                        <a href="/categorias?category=zapatillas" class="list-group-item list-group-item-action">Zapatillas</a>
                        <a href="/categorias?category=pantalones" class="list-group-item list-group-item-action">Pantalones</a>
                        <a href="/categorias?category=accesorios" class="list-group-item list-group-item-action">Accesorios</a>
                    </div>
                </div>
              </div>
            </div>
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                  Temporada
                </button>
              </h2>
              <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                <div class="accordion-body">
                    <div class="list-group list-group-flush">
                        <a href="/categorias?season=invierno" class="list-group-item list-group-item-action">Invierno</a>
                        <a href="/categorias?season=verano" class="list-group-item list-group-item-action">Verano</a>
                        <a href="/categorias?season=primavera" class="list-group-item list-group-item-action">Primavera</a>
                        <a href="/categorias?season=otoño" class="list-group-item list-group-item-action">Otoño</a>
                    </div>
                </div>
              </div>
            </div>
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                  Genero
                </button>
              </h2>
              <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                <div class="accordion-body">
                    <div class="list-group list-group-flush">
                        <a href="/categorias?gender=hombre" class="list-group-item list-group-item-action">Hombre</a>
                        <a href="/categorias?gender=mujer" class="list-group-item list-group-item-action">Mujer</a>
                        <a href="/categorias?gender=unisex" class="list-group-item list-group-item-action">Unisex</a>
                    </div>
                </div>
              </div>
            </div>
            
          </div>
      </div>
      <div class="col-9">
        <section class="container-fluid presentacion">
            <div class="row justify-content-evenly row-cols-3 g-4">

              <% products.forEach((pro)=>{%>

                <div class="col ps-0 pe-0 card" style="width: 20rem;">
                    <img src="<%= pro.image %>" class="card-img-top" alt="Product image">
                    <div class="card-body">
                        <h5 class="card-title"><%= pro.name %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <p class="card-text"><%= pro.season %></p>
                        <p>Precio: $<%= pro.price %></p>
                        <a href="#" class="btn btn-secondary">Agregar al carrito</a>
                    </div>
                </div>
        
                <%})%>
        
            </div>
        </section>
      </div>
    </div>
  </div>



<%- include ('../partials/footer')-%>