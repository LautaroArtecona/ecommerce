<%- include ('../partials/head')-%>
<%- include ('../partials/adminnav')-%>

<div class="container mt-5">
    <div class="row">
        <table class="table table-striped table-hover mt-5 border border-dark-subtle">
            <thead>
                <tr>
                <th scope="col">Image</th>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Season</th>
                <th scope="col">Gender</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((pro)=>{%>

                <tr>

                <th scope="row"><img class="img-allprod" src="<%= pro.image %>" alt="Product Image"></th>
                <td class="align-middle"><%= pro.name %></td>
                <td class="align-middle">$<%= pro.price %></td>
                <td class="align-middle"><%= pro.category %></td>
                <td class="align-middle"><%= pro.season %></td>
                <td class="align-middle"><%= pro.gender %></td>
                <td class="align-middle"><button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= pro._id %>">
                    Delete Product
                </button></td>

                </tr>


                <!-- Modal -->
                <div class="modal fade" id="exampleModal<%= pro._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this product?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <form style="display: inline;" action="/delete/product/<%= pro.id %>" method="POST">
                            <button type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form>
                    </div>
                    </div>
                </div>
                </div>


                <%})%>

            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</html>