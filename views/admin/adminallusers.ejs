<%- include ('../partials/head')-%>
<%- include ('../partials/adminnav')-%>

<div class="container mt-5">
    <div class="row">
        <div class="mt-5 text-center">
            <h3>All Users</h3>
        </div>
        <table class="table table-striped table-hover mt-3 border border-dark-subtle">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% let counter = 1 %>
                <% users.forEach((user)=>{%>

                <tr>

                <th scope="row" class="align-middle"><%= counter++ %></th>
                <td class="align-middle"><%= user.name %></td>
                <td class="align-middle"><%= user.email %></td>
                <td class="align-middle"><%= user.role %></td>
                <td class="align-middle"><button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= user._id %>">
                    Delete User
                </button></td>

                </tr>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal<%= user._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete User</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this user?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <form style="display: inline;" action="/delete/user/<%= user.id %>" method="POST">
                            <button type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form>
                    </div>
                    </div>
                </div>
                </div>

                <%})%>

            </tbody>
        </table>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</html>